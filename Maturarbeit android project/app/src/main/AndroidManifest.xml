<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.imlee.maturarbeit" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ma_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GameClient"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme"
            android:keepScreenOn="true" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.imlee.maturarbeit.activities.StartActivity" />

        </activity>
        <activity
            android:name=".activities.ChooseActivity"
            android:label="@string/title_activity_choose" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.imlee.maturarbeit.activities.StartActivity" />
        </activity>
    </application>
</manifest>



