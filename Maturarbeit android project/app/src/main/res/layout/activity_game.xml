<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ch.imlee.maturarbeit.game.views.GameSurface
        android:id="@+id/game_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ch.imlee.maturarbeit.game.views.ParticleButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical|end"
        android:id="@+id/button_particle"
        android:text="@string/button_particle"
        android:background="@drawable/button_particle_states"/>

    <ch.imlee.maturarbeit.game.views.SkillButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:id="@+id/button_skill"
        android:text="@string/button_skill"
        android:background="@drawable/button_particle_states"
        android:layout_marginBottom="30dp" />
</FrameLayout>