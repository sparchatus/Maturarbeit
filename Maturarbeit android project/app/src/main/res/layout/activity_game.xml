<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.android.diploma.imlee.ma_application_workspace.CaptureTheFlagSurface
        android:id="@+id/game_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.android.diploma.imlee.ma_application_workspace.ParticleButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical|end"
        android:id="@+id/button_particle"
        android:text="@string/button_particle"
        android:background="@drawable/button_particle_states"/>

    <com.android.diploma.imlee.ma_application_workspace.SkillButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|end"
        android:id="@+id/button_skill"
        android:text="@string/button_skill"
        android:background="@drawable/button_skill_states"/>
</FrameLayout>