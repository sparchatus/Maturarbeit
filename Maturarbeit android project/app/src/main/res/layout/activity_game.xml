<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ch.imlee.maturarbeit.views.GameSurface
        android:id="@+id/game_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ch.imlee.maturarbeit.views.SkillButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:id="@+id/button_skill"
        android:background="@drawable/button_skill_states" />

    <ch.imlee.maturarbeit.views.ParticleButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right|bottom"
        android:id="@+id/button_particle"
        android:background="@drawable/button_particle_states"
        android:layout_marginBottom="70dp" />

    <ch.imlee.maturarbeit.views.JoystickSurface
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:id="@+id/joystick"
        android:layout_gravity="left|bottom" />

    <ch.imlee.maturarbeit.views.MiniMap
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right|top"
        android:id="@+id/mini_map_surface"/>
</FrameLayout>